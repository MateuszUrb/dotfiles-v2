set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#111111" # Red
set notification-error-fg       "#6A6A6A" # Foreground
set notification-warning-bg     "#111111" # Orange
set notification-warning-fg     "#6A6A6A" # Selection
set notification-bg             "#111111" # Background
set notification-fg             "#6A6A6A" # Foreground

set completion-bg               "#111111" # Background
set completion-fg               "#6A6A6A" # Comment
set completion-group-bg         "#111111" # Background
set completion-group-fg         "#6A6A6A" # Comment
set completion-highlight-bg     "#111111" # Selection
set completion-highlight-fg     "#6A6A6A" # Foreground

set index-bg                    "#111111" # Background
set index-fg                    "#6A6A6A" # Foreground
set index-active-bg             "#111111" # Current Line
set index-active-fg             "#6A6A6A" # Foreground

set inputbar-bg                 "#111111" # Background
set inputbar-fg                 "#6A6A6A" # Foreground
set statusbar-bg                "#111111" # Background
set statusbar-fg                "#6A6A6A" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#111111" # Background
set default-fg                  "#6A6A6A" # Foreground

set render-loading              true
set render-loading-fg           "#111111" # Background
set render-loading-bg           "#6A6A6A" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#111111" # Background
set recolor-darkcolor           "#6A6A6A" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
set guioptions none
